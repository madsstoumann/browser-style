{
  "systems": [
    {
      "fileName": "layout.css",
      "path": "layouts",
      "layer": "layout",
      "element": "lay-out",
      "generateHTML": true,
      "core": ["base"],
      "common": ["animations"],
      "layoutContainer": {
        "layoutRootElement": "body",
        "maxLayoutWidth": {
          "value": "1024px",
          "cssProperty": "--layout-bleed-mw"
        },
        "layoutMargin": {
          "value": "1rem", 
          "cssProperty": "--layout-mi"
        },
        "widthTokens": {
          "xs": { "value": "20rem", "cssProperty": "--layout-width-xs" },
          "sm": { "value": "30rem", "cssProperty": "--layout-width-sm" },
          "md": { "value": "48rem", "cssProperty": "--layout-width-md" },
          "lg": { "value": "64rem", "cssProperty": "--layout-width-lg" },
          "xl": { "value": "80rem", "cssProperty": "--layout-width-xl" },
          "xxl": { "value": "96rem", "cssProperty": "--layout-width-xxl" }
        }
      },
      "breakpoints": {
        "xs": {
          "type": "@media",
          "min": "240px",
          "max": null,
          "layouts": ["autofit"]
        },
        "sm": {
          "type": "@media",
          "min": "380px",
          "max": null,
          "layouts": [
            "autofit", 
            {
              "columns": ["columns(2)"],
              "grid": ["grid(3a)"],
              "mosaic": ["mosaic(photo)"]
            }
          ]
        },
        "md": {
          "type": "@media",
          "min": "540px",
          "max": null,
          "layouts": ["columns", 
            "grid", 
            {
              "grid": ["grid(3a)"]
            }
          ]
        },
        "lg": {
          "type": "@media",
          "min": "720px",
          "max": null,
          "layouts": ["asymmetrical", "bento", "columns", "grid", "ratios"]
        },
        "xl": {
          "type": "@media",
          "min": "920px",
          "max": null,
          "layouts": [
            {
              "bento": ["bento(6a)"],
              "mosaic": ["mosaic(scatter)", "mosaic(hex)", "mosaic(pinwheel)", "mosaic(cornerstone)"]
            }
          ]
        },
        "xxl": {
          "type": "@media",
          "min": "1140px",
          "max": null,
          "layouts": [{ "bento": ["bento(6a)"] }]
        }
      }
    }
  ]
}