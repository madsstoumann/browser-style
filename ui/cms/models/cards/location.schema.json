{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "location",
  "title": "Location Card",
  "description": "Location card for places and tourist destinations",
  "metadata": {
    "version": "1.0.0",
    "lastModified": "2026-01-07",
    "displayField": "headline"
  },
  "structure": {
    "allowedAsRoot": true,
    "folder": "Cards"
  },
  "type": "object",
  "properties": {
    "address_country": {
      "type": "string",
      "title": "Country",
      "description": "Country"
    },
    "address_locality": {
      "type": "string",
      "title": "City",
      "description": "City or locality"
    },
    "address_region": {
      "type": "string",
      "title": "State/Region",
      "description": "State or region"
    },
    "amenities": {
      "type": "array",
      "title": "Amenities",
      "description": "Available amenities",
      "items": {
        "type": "string"
      }
    },
    "category": {
      "type": "string",
      "title": "Category",
      "description": "Content category"
    },
    "contact": {
      "type": "string",
      "title": "Contact",
      "description": "Contact phone number"
    },
    "featured_media": {
      "type": "media",
      "title": "Featured Media",
      "description": "Location image"
    },
    "geo_latitude": {
      "type": "number",
      "title": "Latitude",
      "description": "Geographic latitude"
    },
    "geo_longitude": {
      "type": "number",
      "title": "Longitude",
      "description": "Geographic longitude"
    },
    "headline": {
      "type": "string",
      "title": "Headline",
      "description": "Primary headline"
    },
    "hours": {
      "type": "string",
      "title": "Hours",
      "description": "Opening hours"
    },
    "media": {
      "type": "media",
      "title": "Media",
      "description": "Primary media asset (image, video, etc.)",
      "options": {
        "accept": [
          "image/*",
          "video/*"
        ]
      }
    },
    "rating_count": {
      "type": "number",
      "title": "Rating Count",
      "description": "Number of ratings"
    },
    "rating_max": {
      "type": "number",
      "title": "Rating Maximum",
      "description": "Maximum rating value",
      "default": 5
    },
    "rating_value": {
      "type": "number",
      "title": "Rating Value",
      "description": "Average rating"
    },
    "street_address": {
      "type": "string",
      "title": "Street Address",
      "description": "Street address"
    },
    "subheadline": {
      "type": "string",
      "title": "Subheadline",
      "description": "Secondary headline"
    },
    "summary": {
      "type": "text",
      "title": "Summary",
      "description": "Brief summary or description"
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "description": "Keywords or tags",
      "items": {
        "type": "string"
      }
    }
  },
  "required": []
}