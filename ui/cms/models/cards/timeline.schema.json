{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "timeline",
  "title": "Timeline Card",
  "description": "Timeline card for chronological events",
  "metadata": {
    "version": "1.0.0",
    "lastModified": "2026-01-07",
    "displayField": "headline"
  },
  "structure": {
    "allowedAsRoot": true,
    "folder": "Cards"
  },
  "type": "object",
  "properties": {
    "category": {
      "type": "string",
      "title": "Category",
      "description": "Content category"
    },
    "featured_media": {
      "type": "media",
      "title": "Featured Media",
      "description": "Featured image"
    },
    "headline": {
      "type": "string",
      "title": "Headline",
      "description": "Primary headline"
    },
    "media": {
      "type": "media",
      "title": "Media",
      "description": "Primary media asset (image, video, etc.)",
      "options": {
        "accept": [
          "image/*",
          "video/*"
        ]
      }
    },
    "subheadline": {
      "type": "string",
      "title": "Subheadline",
      "description": "Secondary headline"
    },
    "summary": {
      "type": "text",
      "title": "Summary",
      "description": "Brief summary or description"
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "description": "Keywords or tags",
      "items": {
        "type": "string"
      }
    },
    "timeline_items": {
      "type": "reference",
      "title": "Timeline Items",
      "description": "References to timeline event items",
      "options": {
        "referenceType": "timeline-item",
        "multiple": true
      }
    }
  },
  "required": []
}