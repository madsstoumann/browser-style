{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "news",
  "title": "News Card",
  "description": "News article card with publication details and authors",
  "metadata": {
    "version": "1.0.0",
    "lastModified": "2026-01-07",
    "displayField": "headline"
  },
  "structure": {
    "allowedAsRoot": true,
    "folder": "Cards"
  },
  "type": "object",
  "properties": {
    "authors": {
      "type": "reference",
      "title": "Authors",
      "description": "News authors",
      "options": {
        "referenceType": "author",
        "multiple": true
      }
    },
    "body": {
      "type": "richtext",
      "title": "Body Content",
      "description": "Main news body content"
    },
    "category": {
      "type": "string",
      "title": "Category",
      "description": "Content category"
    },
    "comment_count": {
      "type": "number",
      "title": "Comment Count",
      "description": "Number of comments"
    },
    "featured_media": {
      "type": "media",
      "title": "Featured Media",
      "description": "Featured image or video"
    },
    "headline": {
      "type": "string",
      "title": "Headline",
      "description": "Primary headline"
    },
    "media": {
      "type": "media",
      "title": "Media",
      "description": "Primary media asset (image, video, etc.)",
      "options": {
        "accept": [
          "image/*",
          "video/*"
        ]
      }
    },
    "media_caption": {
      "type": "string",
      "title": "Media Caption",
      "description": "Media caption"
    },
    "modified_date": {
      "type": "datetime",
      "title": "Modified Date",
      "description": "Last modification date"
    },
    "published_date": {
      "type": "datetime",
      "title": "Published Date",
      "description": "Publication date and time"
    },
    "reading_time": {
      "type": "string",
      "title": "Reading Time",
      "description": "Estimated reading time"
    },
    "ribbon_style": {
      "type": "string",
      "title": "Ribbon Style",
      "description": "Ribbon style class"
    },
    "ribbon_text": {
      "type": "string",
      "title": "Ribbon Text",
      "description": "Ribbon badge text"
    },
    "share_count": {
      "type": "number",
      "title": "Share Count",
      "description": "Number of shares"
    },
    "sticker_position": {
      "type": "string",
      "title": "Sticker Position",
      "description": "Sticker position"
    },
    "sticker_style": {
      "type": "string",
      "title": "Sticker Style",
      "description": "Sticker style class"
    },
    "sticker_text": {
      "type": "string",
      "title": "Sticker Text",
      "description": "Sticker badge text"
    },
    "subheadline": {
      "type": "string",
      "title": "Subheadline",
      "description": "Secondary headline"
    },
    "summary": {
      "type": "text",
      "title": "Summary",
      "description": "Brief summary or description"
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "description": "Keywords or tags",
      "items": {
        "type": "string"
      }
    },
    "view_count": {
      "type": "number",
      "title": "View Count",
      "description": "Number of views"
    }
  },
  "required": []
}