{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "id": "content-card",
  "title": "Content Card",
  "description": "A polymorphic card component supporting 25 different content types.",
  "metadata": {
    "version": "1.0.0",
    "lastModified": "2026-01-02",
    "displayField": "headline"
  },
  "structure": {
    "allowedAsRoot": true,
    "folder": "Cards"
  },
  "type": "object",
  "properties": {
    "headline": {
      "type": "string",
      "title": "Headline",
      "description": "Primary headline"
    },
    "subheadline": {
      "type": "string",
      "title": "Subheadline",
      "description": "Secondary headline"
    },
    "summary": {
      "type": "text",
      "title": "Summary",
      "description": "Brief summary or description"
    },
    "category": {
      "type": "string",
      "title": "Category",
      "description": "Content category"
    },
    "tags": {
      "type": "array",
      "title": "Tags",
      "description": "Keywords or tags",
      "items": {
        "type": "string"
      }
    },
    "media": {
      "type": "media",
      "title": "Media",
      "description": "Primary media asset (image, video, etc.)",
      "options": {
        "accept": ["image/*", "video/*"]
      }
    },
    "data": {
      "type": "object",
      "title": "Card Data",
      "description": "Stores complex common data (media, actions) and type-specific content.",
      "validation": {
        "required": true
      }
    }
  },
  "required": []
}
