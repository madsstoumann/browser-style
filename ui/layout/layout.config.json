{
  "element": "lay-out",
  "layoutContainer": {
    "element": "body",
    "maxWidth": 1024,
    "margin": "1rem"
  },
  "core": ["base"],
  "common": ["animations"],
  "breakpoints": {
    "xs": {
      "type": "@media",
      "min": "240px",
      "layouts": ["autofit"]
    },
    "sm": {
      "type": "@media",
      "min": "380px",
      "layouts": [
        "autofit",
        {
          "columns": ["columns(2)"],
          "grid": ["grid(3a)"],
          "mosaic": ["mosaic(photo)"]
        }
      ]
    },
    "md": {
      "type": "@media",
      "min": "540px",
      "layouts": [
        "columns",
        {
          "grid": ["grid(3a)"]
        }
      ]
    },
    "lg": {
      "type": "@media",
      "min": "720px",
      "layouts": ["asymmetrical", "bento", "columns", "grid", "ratios"]
    },
    "xl": {
      "type": "@media",
      "min": "920px",
      "layouts": [
        {
          "bento": ["bento(6a)"],
          "mosaic": ["mosaic(scatter)", "mosaic(hex)", "mosaic(pinwheel)", "mosaic(cornerstone)"]
        }
      ]
    },
    "xxl": {
      "type": "@media",
      "min": "1140px",
      "layouts": [
        {
          "bento": ["bento(6a)"]
        }
      ]
    }
  }
}
