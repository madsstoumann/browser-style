{
  "name": "@browser.style/layout",
  "version": "1.1.1",
  "description": "Modern CSS layout system with responsive grid patterns, container queries, configurable builds, and responsive image srcsets generation",
  "type": "module",
  "main": "index.js",
  "style": "dist/layout.css",
  "scripts": {
    "build": "node build.js",
    "build:min": "node build.js --minify",
    "build:watch": "node build.js --watch",
    "dev": "npm run build:watch",
    "test": "node -e \"import('./index.js').then(m => console.log('âœ… Module exports working:', Object.keys(m)))\"",
    "prepublishOnly": "npm run build && npm test"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "style": "./dist/layout.css"
    },
    "./css": "./dist/layout.css",
    "./css/min": "./dist/layout.min.css",
    "./config": "./config.json",
    "./systems/*": "./systems/*",
    "./build": "./build.js"
  },
  "files": [
    "index.js",
    "build.js", 
    "config.json",
    "core/",
    "systems/",
    "dist/",
    "icons.js"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "css-grid",
    "responsive-design", 
    "responsive-images",
    "srcsets",
    "sizes-attribute",
    "layout-system",
    "css-framework",
    "web-components",
    "container-queries",
    "media-queries",
    "grid-layouts",
    "bento-grids", 
    "image-optimization",
    "browser.style"
  ],
  "author": "Mads Stoumann",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madsstoumann/browser-style.git",
    "directory": "ui/layout"
  },
  "bugs": {
    "url": "https://github.com/madsstoumann/browser-style/issues"
  },
  "homepage": "https://browser.style/ui/layout",
  "devDependencies": {
    "cssnano": "^7.0.7",
    "cssnano-preset-advanced": "^7.0.7",
    "postcss": "^8.5.6"
  }
}
