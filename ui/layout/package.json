{
  "name": "@browser.style/layout",
  "version": "1.5.0",
  "description": "Modern CSS layout system with responsive grid patterns and responsive image srcsets",
  "type": "module",
  "main": "index.js",
  "style": "dist/layout.css",
  "scripts": {
    "build": "node build.js",
    "build:maps": "node src/maps.js",
    "build:demo": "node -e \"import('./src/demo.js').then(m => m.buildDemoFiles('./layouts', './dist'))\"",
    "build:icons": "node -e \"import('./src/icons.js').then(m => m.buildIcons('./layouts', './dist/icons'))\"",
    "build:all": "npm run build:maps && npm run build && npm run build:demo && npm run build:icons",
    "test": "node -e \"import('./index.js').then(m => console.log('âœ… Module exports working:', Object.keys(m)))\"",
    "prepublishOnly": "npm run build:all && npm test"
  },
  "exports": {
    ".": {
      "import": "./index.js",
      "style": "./dist/layout.css"
    },
    "./css": "./dist/layout.css",
    "./css/min": "./dist/layout.min.css",
    "./build": "./build.js",
    "./maps": "./layouts-map.js",
    "./srcsets": "./src/srcsets.js",
    "./components": "./src/components/index.js",
    "./polyfills/attr-fallback": "./polyfills/attr-fallback.js",
    "./polyfills/attr-fallback.css": "./polyfills/attr-fallback.css"
  },
  "files": [
    "index.js",
    "build.js",
    "layout.config.json",
    "layouts-map.js",
    "core/",
    "layouts/",
    "src/",
    "polyfills/",
    "dist/layout.css",
    "dist/layout.min.css",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "browser-style-layout": "./build.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "css-grid",
    "responsive-design",
    "responsive-images",
    "srcsets",
    "sizes-attribute",
    "layout-system",
    "css-framework",
    "container-queries",
    "media-queries",
    "grid-layouts",
    "bento-grids",
    "image-optimization",
    "browser.style"
  ],
  "author": "Mads Stoumann",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madsstoumann/browser-style.git",
    "directory": "ui/layout"
  },
  "bugs": {
    "url": "https://github.com/madsstoumann/browser-style/issues"
  },
  "homepage": "https://browser.style/ui/layout",
  "devDependencies": {
    "cssnano": "^7.0.7",
    "cssnano-preset-advanced": "^7.0.7",
    "postcss": "^8.5.6"
  }
}
